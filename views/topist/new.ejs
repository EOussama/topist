        <form>
            <div class="box">
                <h1 class="title">Creating a new Topist</h1>
                <hr>
                <div class="field has-addons">
                    <p class="control">
                        <a class="button is-static">TOP</a>
                    </p>
                    <p class="control">
                        <input class="input" type="number" value="10" min="3" max="100" required>
                    </p>
